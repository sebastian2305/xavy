<div class="col-sm-6 col-md-4 col-lg-3 d-flex">
  <div class="card mb-4" style="width: 18rem;">
    <div class="card-body d-flex flex-column">
      <h5 align="center" class="card-title">
        <%= activity.name %>

      </h5>
      <br>
      <p class="card-text">
        <b>Dificultad: </b><%= activity.difficulty %>
      </p>

      <p class="card-text">
        <b>Horario: </b><%= activity.schedule %>
      </p>

      <p class="card-text">
        <b>Descripción: </b><%= activity.description %>
      </p>
      <p class="card-text">
        <b>Categorías: </b><%=  Category.find(activity.category_id).name %>
      </p>

    </div>
  </div>
</div>
