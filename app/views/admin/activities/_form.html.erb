<%= simple_form_for @activity, url: url, html: { novalidate: true, class: 'needs-validation' }   do |f| %>
<%= f.input :name, required: true %>
<%= f.input :description, as: :text, required: true %>
<%= f.input :schedule, as: :text, required: true %>
<%= f.input :venue_id, collection: Venue.by_name, as: :select, label_method: :name, value_method: :id, required: true %>
<%= f.input :difficulty, :as => :select, :collection => [['Alta', :Alta], ['Media', :Media], ['Baja', :Baja]], :include_hidden => false %>
<%= f.input :category_id, collection: Category.by_name, as: :select, label_method: :name, value_method: :id, required: true %>
<%= f.button :submit, class: 'btn btn-outline-success' %>
<% end %>
